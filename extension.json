{
	"manifest_version": 2,
	"name": "AiTranslationExtension",
	"version": "1.0.0",
	"author": [
		"Local"
	],
	"description": "Adds API modules and UI helpers for Translate page translation workflows.",
	"type": "other",
	"requires": {
		"MediaWiki": ">= 1.42.0"
	},
	"config": {
		"AiTranslationExtensionLanguageSidebar": {
			"value": false,
			"description": "Use MediaWiki:Sidebar/<lang> based on the user interface language."
		},
		"DRUnifiedLangSwitcherEnabled": {
			"value": false,
			"description": "Enable unified language switcher for content + UI languages."
		},
		"DRUnifiedLangSwitcherNamespaces": {
			"value": [ 0 ],
			"description": "Namespace IDs where the unified language switcher is enabled."
		},
		"DRUnifiedLangSwitcherPosition": {
			"value": "sidebar",
			"description": "Placement for the unified language switcher: sidebar, header, or personal."
		},
		"DRUnifiedLangSwitcherFallbackBehavior": {
			"value": "stay_and_notify",
			"description": "Behavior when translation is missing: stay_and_notify or navigate_anyway."
		},
		"DRUnifiedLangSwitcherPreferAvailableOnly": {
			"value": true,
			"description": "Only show languages with existing translation pages."
		},
		"DRUnifiedLangSwitcherUILanguageMode": {
			"value": "uls_cookie",
			"description": "How to set UI language: uls_cookie or user_preference_only."
		}
	},
	"MessagesDirs": {
		"AiTranslationExtension": [
			"i18n"
		]
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": "AiTranslationExtension"
	},
	"AutoloadClasses": {
		"MediaWiki\\Extension\\AiTranslationExtension\\ApiLanguageStatus": "src/ApiLanguageStatus.php",
		"MediaWiki\\Extension\\AiTranslationExtension\\ApiMarkForTranslation": "src/ApiMarkForTranslation.php",
		"MediaWiki\\Extension\\AiTranslationExtension\\ApiTranslationInfo": "src/ApiTranslationInfo.php",
		"MediaWiki\\Extension\\AiTranslationExtension\\ApiTranslationStatus": "src/ApiTranslationStatus.php"
	},
	"ResourceModules": {
		"ext.danceresource.common": {
			"scripts": [
				"resources/ext.danceresource.common.js"
			],
			"styles": [
				"resources/ext.danceresource.common.css"
			],
			"dependencies": [
				"mediawiki.api"
			]
		},
		"ext.aitranslation.statusUi": {
			"scripts": [
				"resources/ext.aitranslation.statusUi.js"
			],
			"styles": [
				"resources/ext.aitranslation.statusUi.css"
			],
			"messages": [
				"aits-status-machine",
				"aits-status-source-language",
				"aits-status-reviewed",
				"aits-status-outdated",
				"aits-banner-machine-title",
				"aits-banner-machine-body",
				"aits-banner-machine-link-text",
				"aits-banner-machine-cta",
				"aits-banner-outdated-title",
				"aits-banner-outdated-body",
				"aits-banner-outdated-cta",
				"aits-open-translate-editor",
				"aits-open-direct-edit-warning",
				"aits-open-page-source",
				"aits-open-source",
				"aits-tooltip-status",
				"aits-tooltip-translation-status",
				"aits-tooltip-source-rev",
				"aits-tooltip-outdated-rev",
				"aits-tooltip-reviewed-by",
				"aits-tooltip-reviewed-at",
				"aits-show-machine-banner",
				"aits-close"
			],
			"dependencies": [
				"mediawiki.api",
				"mediawiki.util"
			]
		},
		"ext.danceresource.unifiedLangSwitcher": {
			"scripts": [
				"resources/ext.danceresource.unifiedLangSwitcher.js"
			],
			"styles": [
				"resources/ext.danceresource.unifiedLangSwitcher.css"
			],
			"messages": [
				"druls-languages",
				"druls-translation-not-available",
				"druls-help-translate",
				"druls-search-languages"
			],
			"dependencies": [
				"mediawiki.api",
				"mediawiki.util",
				"mediawiki.notification",
				"ext.uls.common"
			]
		}
	},
	"APIModules": {
		"markfortranslation": "MediaWiki\\Extension\\AiTranslationExtension\\ApiMarkForTranslation",
		"danceresource-languagestatus": "MediaWiki\\Extension\\AiTranslationExtension\\ApiLanguageStatus",
		"aitranslationinfo": "MediaWiki\\Extension\\AiTranslationExtension\\ApiTranslationInfo",
		"aitranslationstatus": "MediaWiki\\Extension\\AiTranslationExtension\\ApiTranslationStatus"
	}
}
