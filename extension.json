{
	"manifest_version": 2,
	"name": "AiTranslationExtension",
	"version": "1.0.0",
	"author": [
		"Local"
	],
	"description": "Adds an API module to mark pages for translation.",
	"type": "other",
	"requires": {
		"MediaWiki": ">= 1.42.0"
	},
	"config": {
		"AiTranslationExtensionLanguageSidebar": {
			"value": false,
			"description": "Use MediaWiki:Sidebar/<lang> based on the user interface language."
		}
	},
	"AutoloadNamespaces": {
		"MediaWiki\\\\Extension\\\\AiTranslationExtension\\\\": "src/"
	},
	"AutoloadClasses": {
		"MediaWiki\\\\Extension\\\\AiTranslationExtension\\\\ApiMarkForTranslation": "src/ApiMarkForTranslation.php",
		"MediaWiki\\\\Extension\\\\AiTranslationExtension\\\\HookHandler": "src/HookHandler.php"
	},
	"Hooks": {
		"SkinBuildSidebar": "MediaWiki\\\\Extension\\\\AiTranslationExtension\\\\HookHandler::onSkinBuildSidebar"
	},
	"APIModules": {
		"markfortranslation": "MediaWiki\\\\Extension\\\\AiTranslationExtension\\\\ApiMarkForTranslation"
	}
}
